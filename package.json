{
	"id":"com.moimz.imodule.module.email",
	"icon":"fa-envelope-o",
	"title":{
		"ko":"이메일관리"
	},
	"version":"3.0.0",
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodule.kr",
	"versionChecker":"http://www.moimz.com/ko/api/moimz/getLatest",
	"description":{
		"ko":"이메일을 발송하고, 이메일의 수신결과를 관리합니다."
	},
	"dependencies":{
		"core":"3.0.0",
		"attachment":"3.0.0",
		"wysiwyg":"3.0.0",
		"keyword":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":false,
	"global":false,
	"article":false,
	"databases":{
		"email_receiver_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"parent":{
					"type":"int",
					"length":11
				},
				"to":{
					"type":"varchar",
					"length":150
				},
				"reg_date":{
					"type":"int",
					"length":11
				},
				"status":{
					"type":"enum",
					"length":"'SUCCESS','SENDING','FAIL'",
					"default":"SUCCESS"
				},
				"message":{
					"type":"varchar",
					"length":100,
					"is_null":true
				}
			},
			"indexes":{
				"idx":"primary_key",
				"parent,status":"index"
			},
			"auto_increment":"idx"
		},
		"email_send_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"from":{
					"type":"varchar",
					"length":150
				},
				"subject":{
					"type":"varchar",
					"length":255
				},
				"content":{
					"type":"longtext"
				},
				"search":{
					"type":"text"
				},
				"receiver":{
					"type":"int",
					"length":11
				},
				"reg_date":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"idx":"primary_key",
				"reg_date":"index",
				"subject,search":"fulltext"
			},
			"auto_increment":"idx"
		}
	}
}